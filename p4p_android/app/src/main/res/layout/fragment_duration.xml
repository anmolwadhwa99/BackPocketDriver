<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.p4p.backpocketdriver.driverlog.fragments.totalstatistics.DurationFragment"
        android:background="@color/cream">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/weather_spinner"
                android:textStyle="bold|italic"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/weather_spinner_duration"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/time_of_day_spinner"
                android:textStyle="bold|italic"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/time_of_day_spinner_duration"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/road_type_spinner"
                android:textStyle="bold|italic"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/road_type_spinner_duration"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/speed_limit_spinner"
                android:textStyle="bold|italic"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/speed_limit_spinner_duration"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/result_button_duration"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/result"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/background_blue"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/result_duration"
                android:layout_height="wrap_content"
                android:layout_width="15dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_duration_reset"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/reset"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/background_blue"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/summary_button_duration"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/background_blue"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="@string/summary" />
        </TableRow>

    </TableLayout>
</ScrollView>